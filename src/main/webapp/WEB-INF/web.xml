<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Session Timeout -->
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>

    <!-- Optional: If you want to explicitly declare servlets -->

    <!-- RegisterServlet -->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>servlets.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!-- LoginServlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <!-- AssignCourseServlet -->
    <servlet>
        <servlet-name>AssignCourseServlet</servlet-name>
        <servlet-class>servlets.AssignCourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AssignCourseServlet</servlet-name>
        <url-pattern>/assignCourse</url-pattern>
    </servlet-mapping>

    <!-- EnrollStudentServlet -->
    <servlet>
        <servlet-name>EnrollStudentServlet</servlet-name>
        <servlet-class>servlets.EnrollStudentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EnrollStudentServlet</servlet-name>
        <url-pattern>/enroll</url-pattern>
    </servlet-mapping>

</web-app>
